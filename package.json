{
  "name": "ranking-app",
  "version": "1.0.0",
  "description": "IoTCrawler Ranking app",
  "author": "Stefan Bischof",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec 'node -r ts-node/register --inspect-brk' server/index.ts | pino-pretty",
    "test": "mocha test/**/*.ts --exit",
    "test:debug": "mocha --inspect-brk test/**/*.ts --exit",
    "lint": "eslint ./server/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.iotcrawler.net/ranking/ranking.git"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "bluebird": "^3.7.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^2.4.0",
    "express-status-monitor": "^1.2.7",
    "http-status-codes": "^1.3.2",
    "pino": "^5.13.4"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/chai": "^4.2.3",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/pino": "^5.8.11",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "chai": "^4.2.0",
    "eslint": "^6.5.1",
    "husky": "^3.0.9",
    "mocha": "^6.2.1",
    "nodemon": "^1.19.3",
    "pino-pretty": "^3.2.2",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
